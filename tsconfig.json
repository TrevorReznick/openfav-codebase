{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "allowJs": true,
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["src/*"],
      "@/*": ["src/*"],
      "@/react/*": ["src/react/*"],
      "@/lib/*": ["src/lib/*"],
      "openfav-integration": ["./vendor/integrations/index.ts"],
      "openfav:config": ["src/config.ts"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": ["node", "vite/client"],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "include": [
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "vendor/integrations/**/*.ts",
    "vendor/integrations/**/*.js",
    "vite.config.*",
    "astro.config.*"
  ],
  "exclude": [
    "dist/",
    "node_modules/"
  ]
}