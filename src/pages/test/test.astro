---
import Layout from '@/layouts/Layout.astro';
import DynamicWrapper from '@/react/wrappers/dynamicWrapper';
---

<Layout title="DynamicWrapper NewComponent Test">
  <main class="container mx-auto p-6 space-y-6">
    <h1 class="text-2xl font-bold">DynamicWrapper Test: componentName="NewComponent"</h1>

    <div class="p-4 border rounded bg-white dark:bg-gray-900">
      <DynamicWrapper
        client:visible
        componentName="NewComponent"
        debug={true}
        props={{
          title: 'Dynamic (componentName)',
          description: 'Rendered via DynamicWrapper using a bare unique name.'
        }}
      />
    </div>
    <div class="p-4 border rounded bg-white dark:bg-gray-900">
      <DynamicWrapper
        client:visible
        componentName="TestTracker"
        debug={true}
        props={{
          title: 'Dynamic (componentName)',
          description: 'Rendered via DynamicWrapper using a bare unique name.'
        }}
      />
    </div>

    <p class="text-sm text-gray-600 dark:text-gray-400">
      Check the browser console for detailed logs from DynamicWrapper and autoComponentLoader.
    </p>
  </main>
</Layout>
