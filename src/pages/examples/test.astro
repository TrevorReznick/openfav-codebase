---
// src/pages/test.astro
import Layout from '@/layouts/Layout.astro';

// Simple test page to verify routing is working
const testPaths = [
  '/build/examples/test-component',
  '/examples/test-component',
  '/test-component'
];
---

<Layout title="Test Page">
  <div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Test Page</h1>
    <p class="mb-4">This is a test page to verify routing is working.</p>
    
    <div class="space-y-4">
      {testPaths.map(testPath => (
        <div class="p-4 border rounded">
          <h2 class="font-semibold">Test: {testPath}</h2>
          <a 
            href={testPath} 
            class="text-blue-600 hover:underline"
            target="_blank"
          >
            Open {testPath}
          </a>
        </div>
      ))}
    </div>
  </div>
</Layout>
